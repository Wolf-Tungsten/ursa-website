{{!< default}} 

<main id="gh-main" class="gh-main gh-outer">
    <div class="gh-inner">

        <div class="ursa-research-area">
            <h1>Research Areas</h1>
            <div class="ursa-research-area-grid">
                <div class="ursa-research-area-item">
                    <img src="{{asset "images/interest/dsa.png"}}" class="hero-animation transition-delay-0"/>
                    <h2 class="hero-animation transition-delay-1">Domain-specific Accelerators</h2>
                    <p class="hero-animation transition-delay-2">
                        Buidling Domain-Specific Accelerators and Supercomputer for Emerging Applications
                    </p>
                </div>
                <div class="ursa-research-area-item middle-shadow">
                    <img src="{{asset "images/interest/pim.png"}}" class="hero-animation transition-delay-0"/>
                    <h2 class="hero-animation transition-delay-1">Memory-centric Architectures</h2>
                    <p class="hero-animation transition-delay-2">
                        Novel Memory Architecture (3D integrated circuits) for Data-centric Applications
                    </p>
                </div>
                <div class="ursa-research-area-item">
                    <img src="{{asset "images/interest/gene.png"}}" class="hero-animation transition-delay-0"/>
                    <h2 class="hero-animation transition-delay-1" style="line-height: 2.5em;">AI+Genomics</h2>
                    <p class="hero-animation transition-delay-2">
                        Bring together the power of genomics, docking, simulation, imaging
                        to develop AI applications for the the next generation of drug
                        discovery processes
                    </p>
                </div>
            </div>
        </div>

